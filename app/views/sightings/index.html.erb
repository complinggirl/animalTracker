<p id="notice"><%= notice %></p>

<h1>Listing Sightings</h1>
<%= @animal.name %>
<%= @animal.id %>

<table>
  <thead>
    <tr>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>Date</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sightings.each do |sighting| %>
      <tr>
        <td><%= sighting.longitude %></td>
        <td><%= sighting.latitude %></td>
        <td><%= sighting.date %></td>
        <td><%= link_to 'Show', sighting %></td>
        <td><%= link_to 'Edit', edit_animal_sighting_path(sighting.animal, sighting.id) %></td>
        <td><%= link_to 'Destroy', animal_sighting_path(@animal.id,sighting.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sighting', new_animal_sighting_path(@animal) %>
<%= link_to 'Species Page', animals_path %>
